{
  "name": "@digita-ai/dgt-components",
  "version": "0.18.2",
  "description": "Collection of Semantic Components.",
  "author": "Wouter Janssens <wouter@digita.ai>",
  "main": "./dist/dgt-components.umd.js",
  "license": "agpl-3.0",
  "types": "./dist/index.d.ts",
  "module": "./dist/dgt-components.es.js",
  "exports": {
    ".": {
      "import": "./dist/dgt-components.es.js",
      "require": "./dist/dgt-components.umd.js"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "start": "npm run start:watch",
    "start:watch": "vite --port 4000",
    "build": "rimraf ./dist && vite build --mode semcom  && vite build --mode bundle && tsc",
    "lint": "eslint .",
    "lint:fix": "eslint --fix .",
    "lint:staged": "lint-staged",
    "test": "jest",
    "test:ci": "jest --silent --runInBand --passWithNoTests",
    "test:watch": "jest --watch --no-coverage",
    "posttest": "jest-coverage-thresholds-bumper --silent --coverage-summary-path coverage-summary.json"
  },
  "dependencies": {
    "@appnest/lit-translate": "^1.1.18",
    "@digita-ai/dgt-theme": "0.18.2",
    "@digita-ai/dgt-utils": "0.18.2",
    "@digita-ai/inrupt-solid-service": "0.19.1",
    "@digita-ai/semcom-core": "^0.9.5",
    "@digita-ai/semcom-sdk": "^0.9.5",
    "buffer": "6.0.3",
    "debounce": "^1.2.1",
    "jsbarcode": "^3.11.5",
    "lit-element": "2.4.0",
    "n3": "1.8.0",
    "rx-lit": "1.0.1",
    "rxjs": "^7.4.0",
    "xstate": "^4.27.0"
  },
  "devDependencies": {
    "@digita-ai/typescript-config": "^0.3.3",
    "@originjs/vite-plugin-commonjs": "^1.0.0-beta7",
    "@rollup/plugin-commonjs": "^20.0.0",
    "@types/debounce": "^1.2.1",
    "@types/jest": "^27.0.2",
    "@types/n3": "^1.10.3",
    "@types/node": "^14.14.44",
    "@types/rdf-js": "^4.0.1",
    "eslint": "^7.16.0",
    "jest": "^27.3.1",
    "jest-coverage-thresholds-bumper": "1.0.1",
    "jsdom": "^18.1.0",
    "lint-staged": "^12.0.2",
    "rimraf": "^3.0.2",
    "ts-node": "^9.1.1",
    "typescript": "^4.2.4",
    "vite": "^2.6.14"
  },
  "publishConfig": {
    "registry": "https://npm.pkg.github.com/"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/digita-ai/dgt-shared.git",
    "directory": "packages/dgt-components"
  },
  "bugs": {
    "url": "https://github.com/digita-ai/dgt-shared/issues"
  },
  "eslintIgnore": [
    "node_modules",
    "dist",
    "jest.config.ts",
    "vite.config.ts",
    "demo"
  ],
  "jest": {
    "displayName": "dgt-components",
    "preset": "@digita-ai/jest-config",
    "testEnvironment": "jsdom",
    "setupFiles": [
      "<rootDir>/tests/setup.ts"
    ],
    "transformIgnorePatterns": [
      "node_modules/(?!(lit-element|lit-html|rx-lit|@appnest/lit-translate|@inrupt/solid-client|@digita-ai/ui-transfer-solid-client)/)"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 76.33,
        "functions": 74.01,
        "lines": 88.97,
        "statements": 89.22
      }
    },
    "coveragePathIgnorePatterns": [
      "<rootDir>/dist/",
      "<rootDir>/node_modules/",
      "<rootDir>/.*\\.conf(ig)?.ts",
      "<rootDir>/lib/index.ts",
      "<rootDir>/demo/"
    ]
  }
}