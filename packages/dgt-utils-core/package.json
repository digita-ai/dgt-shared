{
  "name": "@digita-ai/dgt-utils-core",
  "version": "0.14.0",
  "scripts": {
    "build": "rimraf ./dist && vite build && tsc",
    "build:dev": "npm run build",
    "lint": "eslint .",
    "lint:fix": "eslint --fix .",
    "test": "jest",
    "test:ci": "jest --runInBand",
    "test:watch": "jest --watch --no-coverage",
    "posttest": "jest-coverage-thresholds-bumper --silent --coverage-summary-path coverage-summary.json"
  },
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "module": "./dist/dgt-utils-core.es.js",
  "exports": {
    ".": {
      "import": "./dist/dgt-utils-core.es.js",
      "require": "./dist/index.js"
    },
    "./package.json": "./package.json"
  },
  "files": [
    "dist"
  ],
  "dependencies": {
    "@types/node": "^14.18.28",
    "rxjs": "^7.4.0",
    "zone.js": "~0.8.26"
  },
  "devDependencies": {
    "@digita-ai/typescript-config": "^0.3.3",
    "@types/jest": "^27.0.2",
    "@typescript-eslint/eslint-plugin": "^4.10.0",
    "@typescript-eslint/parser": "^4.10.0",
    "eslint": "^7.16.0",
    "jest": "^27.3.1",
    "jest-coverage-thresholds-bumper": "1.0.1",
    "jsdom": "^18.1.0",
    "ts-node": "^9.1.1",
    "typescript": "^4.5.2",
    "vite": "2.2.3"
  },
  "publishConfig": {
    "registry": "https://npm.pkg.github.com"
  },
  "repository": {
    "type": "git",
    "url": "ssh://git@github.com/digita-ai/dgt-shared.git",
    "directory": "shared/dgt-utils-core"
  },
  "bugs": {
    "url": "https://github.com/digita-ai/dgt-shared/issues"
  },
  "author": "Wouter Janssens",
  "license": "ISC",
  "ignorePatterns": [
    "node_modules",
    "dist",
    "jest.config.ts",
    "vite.config.ts"
  ],
  "jest": {
    "displayName": "dgt-utils-core",
    "preset": "@digita-ai/jest-config",
    "testEnvironment": "jsdom",
    "coverageThreshold": {
      "global": {
        "branches": 100,
        "functions": 100,
        "lines": 100,
        "statements": 100
      }
    },
    "coveragePathIgnorePatterns": [
      "<rootDir>/dist/",
      "<rootDir>/node_modules/",
      "<rootDir>/.*\\.conf(ig)?.ts",
      "<rootDir>/lib/index.ts"
    ]
  }
}
